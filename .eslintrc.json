{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "arrow-parens": ["error", "as-needed"]
    },
    "overrides": [
        {
            "files": [
                "models",
                "routes",
                "server.js"
            ],
            "rules": {
                "quotes": [
                    "error",
                    "single"
                ],
                "comma-dangle": [
                    "error",
                    "never"
                ],
                "no-console": [
                    "error",
                    {
                        "allow": [
                            "warn",
                            "error"
                        ]
                    }
                ],
                "arrow-parens": ["error", "as-needed"]
            }
        }
    ]
}